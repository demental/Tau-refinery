<% content_for :body_content_left do %>
    <h1>  <%= @page.title %></h1>
    <%= raw @page.content_for(:body) %>
<% end %>
<%= raw @page.content_for(:side_body) %>
<% if @blog_posts.any? %>
<h2><%= t('blog.title')%></h2>
  <section id="blog_posts">
    <ul id="blog_posts">
      <% @blog_posts.each do |blog_post| %>
        <li>
          <time datetime="<%=l blog_post.published_at.to_date, :format => :default %>" class='posted_at'>
            <span class="day"><%= l(blog_post.published_at.to_date, :format => :day)%></span>
            <span class="month"><%= l(blog_post.published_at.to_date, :format => :month)%></span>
          </time>
          <%= link_to blog_post.title, refinery.blog_post_path(blog_post) %>
        </li>
      <% end %>
    </ul>
  </section>
<% else %>
  <p><%= t('.no_blog_articles_yet') %></p>
<% end %>
